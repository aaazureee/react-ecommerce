{
  "name": "react-ecommerce-server",
  "version": "1.0.0",
  "scripts": {
    "client": "cd ../client && npm start",
    "server": "nodemon index.js",
    "build": "cd ../client && npm install && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node index.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "stripe": "6.28.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "concurrently": "^4.0.1",
    "eslint": "^7.6.0",
    "nodemon": "^1.19.1"
  }
}
